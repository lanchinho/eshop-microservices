@model Models.Catalog.ProductModel

<div class="card">
    <div class="card-header bg-success text-white text-uppercase">
        <i class="fa fa-heart"></i> Top product
    </div>
    <a asp-page="ProductDetail" asp-route-productId="@Model.Id">
        <img asp-append-version="true" class="card-img-top img-fluid border-0" src="~/images/product/@Model.ImageFile" alt="@Model.Name">
    </a>
    <div class="card-body">
        <h4 class="card-title text-center">
            <a asp-page="ProductDetail" asp-route-productId="@Model.Id" title="View Product">@Model.Name</a>
        </h4>
        <div class="row align-items-center">
            <div class="col-6">
                <div class="add_to_cart_block">
                    <p class="price mb-0">@Model.Price $</p>
                </div>
            </div>
            <div class="col-6">
                <a asp-page="ProductDetail" asp-route-productId="@Model.Id" class="btn btn-success w-100" role="button" aria-label="View @Model.Name">View</a>
            </div>
        </div>
    </div>
</div>